name: self-hosted runner
on:
  push:
    branches: [feature/**]
  workflow_dispatch: 

jobs:
  test-local:
    runs-on: [self-hosted]

    steps:
    - name: checkout repo
      uses: actions/checkout@v4
    
    - name: system info
      run: |
        echo "🏠 Hostname: $(hostname)"
        echo "🔧 Usuario: $(whoami)"
        echo "🕓 Fecha: $(date)"